<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="jumbotron ">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/business-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Business</a>
            <% } %>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-3">Name</th>
                        <th class="text-center col-4">Email</th>
                        <th class="text-center col-3">Phone</th>
                        <th class="text-center col-1">Update</th>
                        <th class="text-center col-1">Delete</th>
                    <% } else { %>
                        <th class="text-center col-3">Name</th>
                        <th class="text-center col-6">Email</th>
                        <th class="text-center col-3">Phone</th>
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        
                        <% if(typeof displayName == 'string' && displayName) { %>
                          
                            <td class="text-center col-3"><%=  BusinessList[count].name %></td>
                            <td class="text-center col-4"><%=  BusinessList[count].email%></td>
                            <td class="text-center col-3"><%=  BusinessList[count].phone %></td>           
                            <td class="text-center col-1">
                                <a href="/business-list/update/<%=  BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> </a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/business-list/delete/<%=  BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> </a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-3"><%= BusinessList[count].name %></td>
                            <td class="text-center col-6"><%= BusinessList[count].email %></td>
                            <td class="text-center col-3"><%= BusinessList[count].phone %></td> 
                         <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





